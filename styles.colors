:root {
  /* 主色调 */
  --primary: #FF6600;      /* 按钮主色 */
  --accent: #FFD966;       /* 强调色 */
  --bg-night: #0B0B3B;     /* 夜晚背景 */
  --bg-day: #87CEFA;       /* 白天背景 */
  --bg-dusk: #FFA500;      /* 傍晚背景 */
  
  /* 文字色 */
  --text-primary: #FFFFFF;
  --text-secondary: #FFFFCC;
  --text-accent: #FFDD00;
  
  /* 透明层 */
  --overlay-dark: rgba(0, 0, 0, 0.5);
  --overlay-light: rgba(255, 255, 255, 0.1);
}
